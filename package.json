{
  "name": "my-app",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx migrate.ts",
    "db:studio": "bun --env-file=.dev.vars drizzle-kit studio",
    "db:seed": "bun --env-file=.dev.vars tsx scripts/seed-db.ts",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "drizzle-seed": "^0.3.1",
    "postgres": "^3.4.7",
    "tsx": "^4.20.6",
    "wrangler": "^4.4.0"
  }
}
